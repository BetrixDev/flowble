{
    "name": "video-deletion",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "nodemon --watch src/ --ext js,ts --ignore build/ --exec \"pnpm build && pnpm start\"",
        "build": "esbuild src/**/*.ts --outdir=build --platform=node --target=esnext --sourcemap",
        "start": "bun run build/index.js",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.657.0",
        "bullmq": "^5.21.2",
        "db": "workspace:*",
        "env": "workspace:*",
        "logger": "workspace:*"
    },
    "devDependencies": {
        "@types/node": "^22.6.2",
        "esbuild": "^0.24.0",
        "nodemon": "^3.1.7",
        "winston": "^3.15.0"
    }
}