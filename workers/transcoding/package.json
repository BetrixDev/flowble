{
  "name": "transcoding",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src/ --ext js,ts --ignore build/ --exec \"pnpm build && pnpm start\"",
    "build": "esbuild src/**/*.ts --outdir=build --platform=node --target=esnext --sourcemap",
    "start": "bun run build/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "bullmq": "^5.21.2",
    "cms": "workspace:*",
    "db": "workspace:*",
    "execa": "^9.4.0",
    "flowble-util": "workspace:*",
    "logger": "workspace:*",
    "rimraf": "^6.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.6.2",
    "esbuild": "^0.24.0",
    "nodemon": "^3.1.7",
    "winston": "^3.15.0"
  }
}