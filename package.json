{
  "name": "flowble",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "start": "turbo start",
    "format": "prettier . \"!apps/** !packages/** !tooling/**\" --check --cache --cache-location=node_modules/.cache/.prettiercache",
    "format:fix": "prettier . \"!apps/** !packages/** !tooling/**\" --write --cache --cache-location=node_modules/.cache/.prettiercache --log-level=warn",
    "generate-migration": "cd packages/db && pnpm run generate",
    "migrate-dev": "node --env-file=packages/db/.env packages/db/migrate.js",
    "workflow:migrate-db": "cross-env DATABASE_URL=${{ secrets.DATABASE_URL }} node packages/db/migrate.js"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "prettier": "^3.2.5",
    "turbo": "^2.1.2",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@9.1.0",
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "supportedArchitectures": {
      "os": [
        "win32",
        "linux"
      ],
      "cpu": [
        "x64",
        "arm64"
      ]
    },
    "patchedDependencies": {
      "@ffmpeg/util@0.12.1": "patches/@ffmpeg__util@0.12.1.patch"
    }
  }
}